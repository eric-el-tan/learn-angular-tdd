{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": ".build",
    "rootDir": "./",
    "sourceMap": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", ",**/*.test.ts"]
}
